<Page x:Class="InterestTracker.LoanPayments"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InterestTracker"
      mc:Ignorable="d"
      Title="LoanPayments" Height="570" Width="995">
    <Page.Resources>
        <CollectionViewSource x:Key="ItemCollectionViewSource" CollectionViewType="ListCollectionView"/>
    </Page.Resources>
    <Grid Name="paymentGrid">
        <Label x:Name="loanPaymentsTitle" Content="Loan Payments" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="29" Width="150" FontSize="18.667" FontWeight="Bold"/>

        <Label x:Name="lablePaymentDate" Content="Payments Date" HorizontalAlignment="Left" Margin="11,44,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="inputPaymentDate"  Margin="20,68,835,0" VerticalAlignment="Top" SelectedDateChanged="inputPaymentDate_SelectedDateChanged"/>

        <Button x:Name="buttonRemovePayment" Content="Remove Payment" HorizontalAlignment="Left" Margin="20,536,0,0" VerticalAlignment="Top" Width="120" Height="24" Click="buttonRemovePayment_Click"/>
        <Button x:Name="buttonAddPayment" Content="Add Payment" HorizontalAlignment="Left" Margin="820,536,0,0" VerticalAlignment="Top" Width="120" Height="24" Click="buttonAddPayment_Click"/>

        <Grid Name="panelPaymentAllocation" Margin="11,99,39,365" LostFocus="panelPaymentAllocation_LostFocus">
            <Slider x:Name="inputPaymentAllocationTrack" HorizontalAlignment="Left" Margin="11,75,0,0" VerticalAlignment="Top" Width="924" Height="22" Maximum="400" ValueChanged="inputPaymentAllocationTrack_ValueChanged"/>
            <Grid Name="panelPaymentAmount" HorizontalAlignment="Left"  Margin="11,10,0,0" VerticalAlignment="Top" Height="60" Width="164">
                <Label x:Name="labelPaymentCurrency" Content="USD" HorizontalAlignment="Left" Margin="-5,27,0,0" VerticalAlignment="Top"/>
                <Label x:Name="labelPaymentAmount" Content="Payment Amount" HorizontalAlignment="Left" Margin="-5,3,0,0" VerticalAlignment="Top"/>
                <TextBox x:Name="inputPaymentAmount" HorizontalAlignment="Left" Height="23" Margin="35,27,0,0" TextWrapping="Wrap" Text="{Binding Path=TotalPaymentAmount, StringFormat={}{0:N}, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="120" PreviewTextInput="inputPaymentAmount_PreviewTextInput" TextChanged="inputPaymentAmount_TextChanged"/>
            </Grid>
            <Grid Name="panelInterestAmount"  HorizontalAlignment="Left"  Height="60" Width="164" Margin="602,10,0,0" VerticalAlignment="Top">
                <Label x:Name="labelInterestPaymentCurrency" Content="USD" HorizontalAlignment="Left" Margin="4,24,0,0" VerticalAlignment="Top"/>
                <Label x:Name="labelPaymentInterestAmount" Content="Interest" HorizontalAlignment="Left" Margin="4,0,0,0" VerticalAlignment="Top"/>
                <TextBox x:Name="inputPaymentInterestAmount" HorizontalAlignment="Left" Height="23" Margin="44,26,0,0" TextWrapping="Wrap" Text="{Binding Path=InterestPaymentAmount, StringFormat={}{0:N}, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="120" PreviewTextInput="inputPaymentInterestAmount_PreviewTextInput" TextChanged="inputPaymentInterestAmount_TextChanged"/>

                <Label x:Name="labelInterestPercent" Content="ix%" HorizontalAlignment="Left" Margin="135,0,0,0" VerticalAlignment="Top"/>
            </Grid>
            <Grid Name="panelPrincipalAmount" HorizontalAlignment="Left" Margin="771,10,0,0" VerticalAlignment="Top" Height="60" Width="164">
                <Label x:Name="labelPrincipalPaymentCurrency" Content="USD" HorizontalAlignment="Left" Margin="3,23,0,0" VerticalAlignment="Top"/>
                <Label x:Name="labelPaymentPrincipalAmount" Content="Principal" HorizontalAlignment="Left" Margin="3,-1,0,0" VerticalAlignment="Top"/>
                <TextBox x:Name="inputPaymentPrincipalAmount" HorizontalAlignment="Left" Height="23" Margin="43,24,0,0" TextWrapping="Wrap" Text="{Binding Path=PrincipalPaymentAmount, StringFormat={}{0:N}, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="120" PreviewTextInput="inputPaymentPrincipalAmount_PreviewTextInput" TextChanged="inputPaymentPrincipalAmount_TextChanged"/>
                <Label x:Name="labelPrincipalPercent" Content="px%" HorizontalAlignment="Left" Margin="131,0,0,0" VerticalAlignment="Top"/>
            </Grid>

        </Grid>
        <DataGrid x:Name="gridPaymentList" DataContext="{StaticResource ItemCollectionViewSource}" AutoGenerateColumns="True" ItemsSource="{Binding}"
                  HorizontalAlignment="Left" Margin="20,210,0,0" VerticalAlignment="Top" Height="321" Width="920" Loaded="gridPaymentList_Loaded" SelectionChanged="gridPaymentList_SelectionChanged">   
        </DataGrid>
        <!--Path=loanObject.PaymentList,-->
        <Label x:Name="labelSelectedDayInfo" Content="Selected date details:" HorizontalAlignment="Left" Margin="785,10,0,0" VerticalAlignment="Top" Width="171"/>


    </Grid>
</Page>
